<Window x:Class="Responsive_calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Responsive calculator" Height="404" Width="288" ResizeMode="NoResize">
    <Grid Background="#FF555555">
        <TextBox Name="Target" HorizontalAlignment="Left" Height="53" TextWrapping="Wrap" GotFocus="Target_OnGotFocus" KeyUp="Content_OnKeyUp" VerticalAlignment="Top" Width="101" FontSize="36" TextAlignment="Center" Margin="10,10,0,0"/>
        <TextBox Name="Content" HorizontalAlignment="Right" Height="53" Margin="0,10,10,0" TextWrapping="Wrap" GotFocus="Content_OnGotFocus" KeyUp="Content_OnKeyUp" VerticalAlignment="Top" Width="93" FontSize="36" TextAlignment="Center"/>
        <ListBox Name="Log" HorizontalAlignment="Left" Height="296" Margin="10,68,0,0" VerticalAlignment="Top" Width="260" Background="#FF555555" BorderBrush="{x:Null}" Foreground="White"/>
    </Grid>
</Window>
